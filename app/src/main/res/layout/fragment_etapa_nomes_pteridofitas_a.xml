<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".fragments.atividade1.pteridofitas.EtapaNomesPteridofitasAFragment">


        <TextView
            android:id="@+id/pergunta_4a"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/nome_pteridofitas"
            style="@style/TextoExibicao"
            android:text="Escreva o nome (popular) das espécies de pteridófitas que você fotografou." />

        <EditText
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_next4a"
            app:layout_constraintTop_toBottomOf="@id/pergunta_4a"
            style="@style/CaixaTexto"
            android:id="@+id/nome_pteridofitas"
            android:inputType="textMultiLine"/>

        <Button
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/BotaoProxima"
            android:id="@+id/button_next4a"
            />



</androidx.constraintlayout.widget.ConstraintLayout>