<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".fragments.atividade1.briofitas.EtapaBriofitasBFragment">


    <TextView
        android:id="@+id/pergunta_2b"
        style="@style/TextoExibicao"
        android:text="Pesquise sobre as características das briófitas."
        app:layout_constraintBottom_toTopOf="@id/link_pesquisa_briofitas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pesquisa_briofitas"
        style="@style/TextoLink"
        android:id="@+id/link_pesquisa_briofitas"
        android:text="Clique aqui para pesquisar"
        app:layout_constraintTop_toBottomOf="@id/pergunta_2b"/>

    <EditText
        android:id="@+id/pesquisa_briofitas"
        style="@style/CaixaTexto"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@id/button_next2b"
        app:layout_constraintDimensionRatio="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/link_pesquisa_briofitas" />

    <Button
        android:id="@+id/button_next2b"
        style="@style/BotaoProxima"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>