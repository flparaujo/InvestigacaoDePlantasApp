<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".fragments.atividade1.plantae.EtapaReinoPlantaeAFragment">

    <TextView
        android:id="@+id/pergunta_1a"
        style="@style/TextoExibicao"
        android:text="Registre fotografia do ambiente, de modo a tentar mostrar as características da vegetação geral."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_ambiente_com_vegetacao"
        style="@style/IconeFoto"
        app:layout_constraintBottom_toTopOf="@id/button_next1a"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pergunta_1a" />

    <Button
        android:id="@+id/button_next1a"
        style="@style/BotaoProxima"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>