<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".fragments.atividade2.Pergunta1Fragment">

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/imagem_pergunta1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/alternativa_1a"
        android:layout_width="@dimen/atv2_img_w"
        android:layout_height="@dimen/atv2_img_h"
        android:src="@drawable/angiosperma_1"/>

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagem_pergunta1"
        android:id="@+id/alternativa_1a"
        style="@style/TextoPerguntaAtividade2"
        android:text="@string/resposta_1a"/>
    <Button
        android:id="@+id/goto_pergunta2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alternativa_1a"
        app:layout_constraintBottom_toTopOf="@+id/alternativa_1b"
        style="@style/BotaoAzulAtividade2"
        android:text="2"/>

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/goto_pergunta2"
        app:layout_constraintBottom_toTopOf="@id/goto_pergunta3"
        android:id="@+id/alternativa_1b"
        style="@style/TextoPerguntaAtividade2"
        android:text="@string/resposta_1b"/>
    <Button
        android:id="@+id/goto_pergunta3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alternativa_1b"
        style="@style/BotaoVermelhoAtividade2"
        android:text="3"/>

</androidx.constraintlayout.widget.ConstraintLayout>