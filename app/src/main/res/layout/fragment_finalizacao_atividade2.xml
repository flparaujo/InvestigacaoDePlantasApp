<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".fragments.atividade2.FinalizacaoAtividade2Fragment">

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/imagem_resposta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/resposta_atividade2"
        android:layout_width="@dimen/atv2_img_w"
        android:layout_height="@dimen/atv2_img_h"
        android:src="@drawable/angiosperma_1"/>

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/imagem_resposta"
        android:id="@+id/resposta_atividade2"
        style="@style/TextoPerguntaAtividade2"
        android:text="Grupo: ANGIOSPERMAS"/>

    <Button
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resposta_atividade2"
        app:layout_constraintBottom_toTopOf="@id/botao_sair_atv2"
        android:id="@+id/botao_compartilhar_atv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/btn_next_rounded"
        android:drawableLeft="?attr/actionModeShareDrawable"
        android:drawableTint="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textStyle="bold"
        android:text="Compartilhar resultado"
        android:textColor="@color/white"/>

    <Button
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/botao_compartilhar_atv2"
        android:id="@+id/botao_sair_atv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/btn_next_rounded"
        android:drawableLeft="@drawable/ic_done_white_24dp"
        android:drawableTint="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textStyle="bold"
        android:text="Sair"
        android:textColor="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>