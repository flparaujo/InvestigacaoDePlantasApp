<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/paleGreen"
    android:orientation="vertical"
    tools:context=".fragments.atividade2.DescricaoAtividade2Fragment">

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/descricao_atividade_2"
        android:padding="15dp"
        android:id="@+id/titulo_atividade_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ATIVIDADE 2: Chave simplificada para identificação dos grupos de plantas"
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
         />

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titulo_atividade_2"
        android:paddingLeft="15dp"
        android:id="@+id/descricao_atividade_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/texto_descricao_atividade_2"
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:padding="15dp"
        android:id="@+id/texto_escolher_planta"
        app:layout_constraintTop_toBottomOf="@id/descricao_atividade_2"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Escolha uma planta abaixo para identificar o grupo ao qual ela pertence:"/>

    <androidx.appcompat.widget.AppCompatSpinner
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/texto_escolher_planta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        />

    <TextView
        android:padding="15dp"
        android:id="@+id/texto_iniciar_atividade"
        app:layout_constraintTop_toBottomOf="@id/spinner"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comece escolhendo entre uma das duas alternativas da opção número 1 e vá para o número indicado:
"/>

    <Button
        android:id="@+id/botao_iniciar_atividade2"
        style="@style/BotaoProxima"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>