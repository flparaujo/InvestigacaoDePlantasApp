<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/paleGreen"
    tools:context=".fragments.atividade1.plantasdesconhecidas.EtapaPlantaDesconhecidaA1Fragment">


        <TextView
            android:id="@+id/pergunta_7a1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/caracteristicas_planta_desconhecida"
            style="@style/TextoExibicao"
            android:text="Indique as características observáveis na planta que você não identificou as que grupo pertence." />

        <EditText
            app:layout_constraintBottom_toTopOf="@id/button_next7a1"
            app:layout_constraintDimensionRatio="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pergunta_7a1"
            style="@style/CaixaTexto"
            android:id="@+id/caracteristicas_planta_desconhecida"
            android:inputType="textMultiLine"/>

        <Button
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/BotaoProxima"
            android:id="@+id/button_next7a1"
            />



</androidx.constraintlayout.widget.ConstraintLayout>