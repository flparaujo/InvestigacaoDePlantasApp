<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/questao1"
    android:background="@color/paleGreen"
    tools:context=".fragments.atividade1.plantae.EtapaReinoPlantaeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            style="@style/TextoExibicao"
            android:text="Faça uma OBSERVAÇÃO no ambiente. Existem organismos do reino plantae?" />

        <Button
            android:background="@drawable/btn_yes_rounded"
            android:id="@+id/button_sim"
            style="@style/BotaoResposta"
            android:text="SIM" />

        <Button
            android:background="@drawable/btn_no_rounded"
            android:id="@+id/button_nao"
            style="@style/BotaoResposta"
            android:text="NÃO" />



    </LinearLayout>


</FrameLayout>