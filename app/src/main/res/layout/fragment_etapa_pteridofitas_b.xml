<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".fragments.atividade1.pteridofitas.EtapaPteridofitasBFragment">

        <TextView
            android:id="@+id/pergunta_3b"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/link_pesquisa_pteridofitas"
            style="@style/TextoExibicao"
            android:text="Pesquise sobre as características das pteridófitas." />

        <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/pesquisa_pteridofitas"
            style="@style/TextoLink"
            android:id="@+id/link_pesquisa_pteridofitas"
            android:text="Clique aqui para pesquisar"
            app:layout_constraintTop_toBottomOf="@id/pergunta_3b"/>

        <EditText
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_next3b"
            app:layout_constraintTop_toBottomOf="@id/link_pesquisa_pteridofitas"
            app:layout_constraintDimensionRatio="0"
            style="@style/CaixaTexto"
            android:id="@+id/pesquisa_pteridofitas"
            android:inputType="textMultiLine"/>

        <Button
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/BotaoProxima"
            android:id="@+id/button_next3b"
            />





</androidx.constraintlayout.widget.ConstraintLayout>