<resources>
    <style name="ToolBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorAccent">@color/white</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>

    </style>

    <style name="ActionBarStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextoExibicao">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@color/paleGreen</item>
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:layout_marginRight">7dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/tamanho_texto_1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="TextoLink">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textColor">@color/cyanLink</item>
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:layout_marginRight">7dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/tamanho_texto_1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="IconeFoto">
        <item name="android:layout_width">@dimen/foto_w</item>
        <item name="android:layout_height">@dimen/foto_h</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:src">@drawable/icone_tirar_foto</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="TextoPerguntaAtividade2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="BotaoProxima">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@drawable/btn_next_rounded</item>
        <item name="android:text">Pr√≥xima</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="BotaoAzulAtividade2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/btn_next_rounded</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="BotaoVermelhoAtividade2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_no_rounded</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="CaixaTexto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:hint">Sua resposta ...</item>
        <item name="android:textColorHint">#55000000</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">7dp</item>
        <item name="android:textSize">@dimen/tamanho_texto_1</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:background">@drawable/rounded_border_edittext</item>
    </style>

    <style name="BotaoResposta">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TituloBotaoMenu">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubtituloBotaoMenu">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textSize">@dimen/tamanho_texto_3</item>
    </style>


</resources>
